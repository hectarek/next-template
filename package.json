		"eslint-plugin-testing-library": "^7.2.1",
		"eslint-plugin-vitest": "^0.5.4",
		"globals": "^16.1.0",
		"husky": "^9.0.11",
		"jsdom": "^26.1.0",
		"lint-staged": "^16.0.0",
		"msw": "^2.8.4",
		"prettier": "^3.2.5",
		"tailwindcss": "^4",
		"tw-animate-css": "^1.3.0",
